{
  "name": "fluttercommaformatter",
  "displayName": "FlutterCommaFormatter",
  "description": "\"Automatically format Flutter code by adding or removing commas.\"",
  "version": "0.0.2",
  "publisher": "FlutterCommaAddOrRemove",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sanjarbek17/fluttercommaformatter"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/logon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.processSelectedWidget",
        "title": "Remove or add commas to selected widget"
      }
    ],
    "keybindings": [
      {
        "command": "extension.processSelectedWidget",
        "key": "ctrl+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  }
}
